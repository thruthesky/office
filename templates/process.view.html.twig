{% set process = data.process %}
<div{{ attributes.addClass( data.class.office ) }}>

    {% include dir_office ~ '/templates/menu.html.twig' %}
    {% include dir_office ~ '/templates/message.html.twig' %}

    <table>
        <tr>
            <td>
                Process No.
            </td>
            <td>
                 {{ process.id.value }}
            </td>
        </tr>
        {% if process %}
        <tr>
            <td>
                <div>Created : {{ process.created.value | date('M d, Y H:i:s') }}</div>
            </td>
        </tr>
        {% endif %}

        <tr>
            <td>
                Name:
            </td>
            <td>
                 {{ process.name.value }}
            </td>
        </tr>

        <tr>
            <td>
                Summary:
            </td>
            <td>
                 {{ process.summary.value }}
            </td>
        </tr>
        <tr>
            <td>
                Description:
            </td>
            <td>
                 {{ process.description.value }}
            </td>
        </tr>
        <tr>
            <td>
                <a href="/office/process/list">LIST</a>
            </td>
        </tr>
    </table>

</div>
