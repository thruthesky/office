{% set process = data.process %}
<div{{ attributes.addClass( data.class.office ) }}>

    <h2>Work Process Add / Edit</h2>

    {% include dir_office ~ '/templates/menu.html.twig' %}
    {% include dir_office ~ '/templates/message.html.twig' %}


    <form action="/office/process/edit">
        <input type="hidden" name="mode" value="submit">
        <input type="hidden" name="process_id" value="{{ process.id.value }}">

        <table cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td>Name</td>
                <td><input type="text" name="name" value="{{ process.name.value }}"></td>
            </tr>
            <tr>
                <td>Summary</td>
                <td><textarea name="summary">{{ process.summary.value }}</textarea></td>
            </tr>
            <tr>
                <td>Description</td>
                <td><textarea name="description">{{ process.description.value }}</textarea></td>
            </tr>
            <tr>
                <td>Work Flow</td>
                <td><textarea name="workflow">{{ process.workflow.value }}</textarea></td>
            </tr>
            <tr>
                <td>Requirement</td>
                <td><textarea name="requirement">{{ process.requirement.value }}</textarea></td>
            </tr>

        </table>

        <div class="jbutton-group">
            <input class="jbutton blue-active submit" type="submit">
            <a class="jbutton list" href="/office/process/list">LIST</a>
        </div>
    </form>
</div>
