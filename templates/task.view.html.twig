{% set task = data.task %}
<div{{ attributes.addClass( data.class.office ) }}>

    {% include dir_office ~ '/templates/menu.html.twig' %}
    {% include dir_office ~ '/templates/message.html.twig' %}

    <table>
        <tr>
            <td>
                Task No.
            </td>
            <td>
                {{ task.id.value }}
            </td>
        </tr>
        <tr>
            <td>
                Group :
            </td>
            <td>
                 {{ task.name.value }}
            </td>
        </tr>

        {% if task %}
        <tr>
            <td>
                <div>Created : {{ task.created.value | date('M d, Y H:i:s') }}</div>
            </td>
        </tr>
        {% endif %}

        <tr>
            <td>
                Title:
            </td>
            <td>
                 {{ task.title.value }}
            </td>
        </tr>

        <tr>
            <td>
                Summary:
            </td>
            <td>
                 {{ task.summary.value }}
            </td>
        </tr>

        <tr>
            <td>
                Description:
            </td>
            <td>
                 {{ task.description.value }}
            </td>
        </tr>

        <tr>
            <td>
                Priority :
            </td>
            <td>
                 {{ task.priority.value }}
            </td>
        </tr>

        <tr>
            <td>
                View status:
            </td>
            <td>
                 {{ task.view_status.value }}
            </td>
        </tr>
        <tr>
            <td>
                Work Flowchart :
            </td>
        </tr>
        <tr>
            <td>
                Requirement:
            </td>
        </tr>
        <tr>
            <td>
                Created By :
            </td>
            <td>
                 {{ task.creator_id.entity.name.value }}
            </td>
        </tr>
        <tr>
            <td>
                Service For (Client) :
            </td>
            <td>
                 {{ task.client_id.entity.name.value }}
            </td>
        </tr>
        <tr>
            <td>
                Assigned To(Worker) :
            </td>
            <td>
                 {{ task.worker_id.entity.name.value }}
            </td>
        </tr>

        <tr>
            <td>
                Person in charge :
            </td>
            <td>
                 {{ task.in_charge_id.entity.name.value }}
            </td>
        </tr>
        <tr>
            <td>
                <div>Upload files:</div>
            </td>
        </tr>
        <tr>
            <td>
                <a href="/office/task/list">LIST</a>
            </td>
        </tr>
    </table>
</div>
