{% set task = data.task %}
<div{{ attributes.addClass( data.class.office ) }}>

    {% include dir_office ~ '/templates/menu.html.twig' %}
    {% include dir_office ~ '/templates/message.html.twig' %}


    Task No. {{ task.id.value }}<br>
    Group : {{ task.name.value }}<br>

    {% if task %}
        <div>Created : {{ task.created.value | date('M d, Y H:i:s') }}</div>
    {% endif %}

    Title: {{ task.title.value }}<br>
    Summary: {{ task.summary.value }}<br>
    Description: {{ task.description.value }}<br>

    Priority : {{ task.priority.value }}<br>

    View status: {{ task.view_status.value }}<br>

        Work Flowchart : <br>
        Requirement: <br>

    Created By : {{ task.creator_id.entity.name.value }}<br>
    Service For (Client) : {{ task.client_id.entity.name.value }}<br>
    Assigned To(Worker) : {{ task.worker_id.entity.name.value }}<br>
    Person in charge : {{ task.in_charge_id.entity.name.value }}<br>

        <div>Upload files:</div>


        <a href="/office/task/list">LIST</a>



</div>
