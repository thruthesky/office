<div class="office-message welcome-task-status grid">

{% if office.member %}
   <div class="a welcome">
       <div class="content">
           {{ ol.welcome | replace({'$name':office.member.user_id.entity.name.value}) }}
           {% if office.groups %}
               {{ ol.group }} :
               Primary - {{ office.group.name.value }}
               {% if office.groups %}
                    Also Joined :
                   {% for group in office.groups %}
                       {{ group.group_id.entity.name.value }}
                   {% endfor %}
               {% endif %}
           {% endif %}
       </div>
    </div>
    <div class="b task-status">
        <div class="content">
            <a href="/office/task/list?mode=submit&group_id=&worker={{ my.user_id.entity.getUsername }}&creator=&in_charge=&client=&keyword=&priority%5B%5D=9&priority%5B%5D=8&priority%5B%5D=6&priority%5B%5D=4&priority%5B%5D=2&status%5Bpending%5D=Y&status%5Baccepted%5D=Y&status%5Binprogress%5D=Y&status%5Bfinished%5D=Y&status%5Bredo%5D=Y&sort=priority&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="task"><b>My task</b><i>{{ my.count_task }}</i></span></a>

            {% if my.count_immediate_task %}
            <a href="/office/task/list?mode=submit&group_id=&worker={{ my.user_id.entity.getUsername }}&creator=&in_charge=&client=&keyword=&priority%5B%5D=9&status%5Bpending%5D=Y&status%5Baccepted%5D=Y&status%5Binprogress%5D=Y&status%5Bfinished%5D=Y&status%5Bredo%5D=Y&sort=priority&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="immediate"><b>Immediate</b><i>{{ my.count_immediate_task }}</i></span></a>
            {% endif %}

            {% if my.count_urgent_task %}
                <a href="/office/task/list?mode=submit&group_id=&worker={{ my.user_id.entity.getUsername }}&creator=&in_charge=&client=&keyword=&priority%5B%5D=8&status%5Bpending%5D=Y&status%5Baccepted%5D=Y&status%5Binprogress%5D=Y&status%5Bfinished%5D=Y&status%5Bredo%5D=Y&sort=priority&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="urgent"><b>Important</b><i>{{ my.count_urgent_task }}</i></span></a>
            {% endif %}
            {% if my.count_deadline_task %}
                <a href="/office/task/list?mode=submit&group_id=&worker={{ my.user_id.entity.getUsername }}&creator=&in_charge=&client=&keyword=&status%5Bpending%5D=Y&status%5Baccepted%5D=Y&status%5Binprogress%5D=Y&status%5Bfinished%5D=Y&status%5Bredo%5D=Y&sort=deadline&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="deadline"><b>Deadline</b><i>{{ my.count_deadline_task }}</i></span></a>
            {% endif %}

            <a href="/office/task/list?mode=submit&group_id=&worker={{ my.user_id.entity.getUsername }}&creator=&in_charge=&client=&keyword=&status%5Bpending%5D=Y&status%5Baccepted%5D=Y&status%5Binprogress%5D=Y&status%5Bfinished%5D=Y&status%5Bredo%5D=Y&sort=changed&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="recent"><b>Recent</b></span></a>

            <a href="/office/task/list?mode=submit&group_id={{ office.group.id.value }}&worker=&creator=&in_charge=&client=&keyword=&status%5Bpending%5D=Y&status%5Baccepted%5D=Y&status%5Binprogress%5D=Y&status%5Bfinished%5D=Y&status%5Bredo%5D=Y&sort=priority&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="recent"><b>My group</b></span></a>

            {% if my.count_rejected_task %}
                <a href="/office/task/list?mode=submit&group_id=&worker={{ my.user_id.entity.getUsername }}&creator=&in_charge=&client=&keyword=&status%5Brejected%5D=Y&sort=priority&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="rejected"><b>Rejected</b><i>{{ my.count_rejected_task }}</i></span></a>
            {% endif %}


            <a href="/office/task/list?mode=submit&worker=&creator=&in_charge=&client=&keyword=&status%5Bpending%5D=Y&status%5Baccepted%5D=Y&status%5Binprogress%5D=Y&status%5Bfinished%5D=Y&status%5Bredo%5D=Y&sort=priority&by=DESC&show_group=Y&show_priority=Y&show_deadline=Y&show_assigned=Y&show_road_map=Y&show_comment=Y&show_filter="><span class="recent"><b>All</b></span></a>
        </div>
    </div>
{% else %}
    <div class="login-first">
        Please login first...
    </div>
{% endif %}

</div>


<nav class="office-menu">
        <div>
            <a href="/office"><span class="caption office">{{ ol.front_desk }}</span></a>
            <a href="/office/member/add"><span class="item register">{{ ol.registration }}</span></a>
            <a href="/office/documentation"><span>Documentation</span></a>
        </div>

        {% if office.group %}
        <div>
            <a href="/office/attendance_list/?mode=submit&date={{ 'now' | date("Y-m-d") }}"><span class="caption my-desk">Attendance List</span></a>
            <a href="/office/attend"><span class="item attend">Attend now</span></a>
        </div>
        {% endif %}

        {% if is_admin %}
         <div>
             <a href="/office/group/list"><span class="caption group-list">ALL GROUP - LIST </span></a>
             <a href="/office/group/add"><span class="item group-create">Create</span></a>
             <a href="/office/member/list"><span class="item all-member-list">ALL Group Member List</span></a>
         </div>
        {% endif %}

        {% if office.is_group_admin %}
        <div>
            <a href="/office/group/{{ office.my_own_group.id.value }}/edit"><span class="caption group-update">My Group - Update</span></a>
            <a href="/office/group/{{ office.my_own_group.id.value }}/workinghours"><span class="item group-update-workschedule">Work Schedules</span></a>
            <a href="/office/group/member/list/{{ office.my_own_group.id.value }}"><span class="item group-member-list">Group Member List</span></a>
        </div>
        {% endif %}

        <div>
            <a href="/office/task/list"><span class="caption">{{ ol.task_list }}</span></a>
            <a href="/office/task/add"><span class="item task-create">{{ ol.task_create }}</span></a>
            <a href="/office/process/list"><span class="item task-create">Work Process Update</span></a>
        </div>
</nav>
