<div class="office-button-group rows submenu-office">

    <div class="button">
        <span class="caption">
            OFFICE
        </span>
        <a href="/office">Front Desk</a>
        <a href="/office/member/add">Office Member Registration</a>
    </div>

    {% if office.member %}
    <div class="button">
        <span class="caption">MY DESK</span>
            <a href="/office/attendance_list/?mode=submit&date={{ 'now' | date("Y-m-d") }}">ATTENDANCE LIST</a>
            <a href="/office/attend">ATTEND</a>

    </div>
    {% endif %}

    {% if is_admin %}
    <div class="button">
        <span class="caption">ALL GROUP</span>
            <a href="/office/group/list">LIST</a>
            <a href="/office/group/add">CREATE</a>
            <a href="/office/member/list">ALL Group Member List</a>
    </div>
    {% endif %}


    {% if office.is_group_admin %}
        <div class="button">
        <span class="caption">Group Admin Page</span>

            <a href="/office/group/{{ data.group.id.value }}/edit">Group Information Update</a>
            <a href="/office/group/{{ data.group.id.value }}/workinghours">Work Schedules</a>

            <a href="/office/member/list">MEMBER LIST</a>

        </div>
    {% endif %}

    <div class="button">
        <span class="caption">TASK</span>
            <a href="/office/task/list">LIST</a>
            <a href="/office/task/add">CREATE</a>
    </div>

</div>

<div class="information">
    <div>Welcome, {{ office.member.user_id.entity.name.value }}</div>
    <div>Your Group : {{ office.member.group_id.entity.name.value }}</div>
    <div>Now : {{ office.now }}</div>
</div>
